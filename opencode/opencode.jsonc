{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["oh-my-opencode", "opencode-antigravity-auth@beta", "@tarquinen/opencode-dcp@latest", "opencode-antigravity-quota@0.1.6"],
  "model": "wolf-ai/glm-4.7",
  "mcp": {
    "mcp-router": {
      "type": "local",
      "command": ["npx", "-y", "@mcp_router/cli@latest", "connect"],
      "environment": {
        "MCPR_TOKEN": "{env:MCPR_TOKEN}",
      },
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": false,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}",
      },
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": false,
    },
  },
  "enabled_providers": ["wolf-ai", "google"],
  "tools": {
    "write": true,
    "bash": true,
    "read": true,
    "edit": true,
    "glob": true,
    "grep": true,
  },
  "agent": {
    "compaction": {
      "model": "google/antigravity-gemini-3-flash",
      "variant": "medium",
    },
    "build": {
      "mode": "primary",
      "model": "wolf-ai/glm-4.7",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
      },
    },
    "plan": {
      "mode": "primary",
      "model": "google/antigravity-gemini-3-pro",
      "variant": "high",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
      },
    },
    "code-reviewer": {
      "description": "Reviews code for best practices and potential issues",
      "mode": "subagent",
      "model": "google/antigravity-gemini-3-flash",
      "prompt": "You are a code reviewer. Focus on security, performance, and maintainability.",
      "tools": {
        "write": false,
        "edit": false,
      },
    },
  },
  "permission": {
    "bash": {
      "*": "allow",
      "git rm *": "deny",
      "git checkout *": "ask",
      "rm *": "deny",
    },
    "edit": {
      "*": "ask",
      "*.md": "allow",
    },
    "webfetch": "allow",
    "skill": "allow",
  },
  "provider": {
    "google": {
      "name": "Google",
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "low": { "thinkingLevel": "low" },
            "high": { "thinkingLevel": "high" },
          },
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "minimal": { "thinkingLevel": "minimal" },
            "low": { "thinkingLevel": "low" },
            "medium": { "thinkingLevel": "medium" },
            "high": { "thinkingLevel": "high" },
          },
        },
        "antigravity-claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } },
          },
        },
      },
    },
    "wolf-ai": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Wolf AI",
      "options": {
        "baseURL": "http://api.ai.rootcloud.info/v1",
      },
      "models": {
        "glm-4.7": {
          "name": "GLM 4.7",
          "id": "svc/glm-4.7",
          "attachment": false,
          "interleaved": {
            "field": "reasoning_content",
          },
          "limit": {
            "context": 202752,
            "output": 65535,
          },
          "modalities": {
            "input": ["text", "image"],
            "output": ["text"],
          },
        },
        "ack-dev": {
          "name": "Ack Dev",
          "id": "svc/kimi-k2",
          "attachment": false,
          "interleaved": {
            "field": "reasoning_content",
          },
          "limit": {
            "context": 202752,
            "output": 65535,
          },
          "modalities": {
            "input": ["text"],
            "output": ["text"],
          },
        },
      },
    },
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true, // 启用 macOS 风格加速滚动时，scroll_speed 无效
    },
    "scroll_speed": 3, // 滚动速度
  },
  "lsp": {
    "pyright": {
      "disabled": true,
    },
  },
}
