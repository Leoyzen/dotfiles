{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["oh-my-opencode", "opencode-antigravity-auth@beta", "@tarquinen/opencode-dcp@latest"],
  "model": "wolf-ai/ack-dev",
  "mcp": {
    "mcp-router": {
      "type": "local",
      "command": ["npx", "-y", "@mcp_router/cli@latest", "connect"],
      "environment": {
        "MCPR_TOKEN": "{env:MCPR_TOKEN}",
      },
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": false,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}",
      },
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": false,
    },
  },
  "enabled_providers": ["wolf-ai", "google"],
  "tools": {
    "write": true,
    "bash": true,
    "read": true,
    "edit": true,
    "glob": true,
    "grep": true,
  },
  "agent": {
    "compaction": {
      "model": "wolf-ai/ack-dev",
      "variant": "medium",
    },
    "build": {
      "mode": "primary",
      "model": "wolf-ai/glm-4.7",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
      },
    },
    "plan": {
      "mode": "primary",
      "model": "google/antigravity-gemini-3-pro",
      "variant": "high",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
      },
    },
    "code-reviewer": {
      "description": "Reviews code for best practices and potential issues",
      "mode": "subagent",
      "model": "wolf-ai/ack-dev",
      "prompt": "You are a code reviewer. Focus on security, performance, and maintainability.",
      "tools": {
        "write": false,
        "edit": false,
      },
    },
  },
  "permission": {
    "bash": {
      "*": "allow",
      "git rm *": "ask",
      "git checkout *": "ask",
      "git restore *": "ask",
      "rm *": "ask",
    },
    "edit": {
      "*": "ask",
      "*.md": "allow",
    },
    "webfetch": "allow",
    "skill": "allow",
  },
  "provider": {
    "google": {
      "name": "Google",
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65535,
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"],
          },
          "variants": {
            "low": {
              "thinkingLevel": "low",
            },
            "high": {
              "thinkingLevel": "high",
            },
          },
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65536,
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"],
          },
          "variants": {
            "minimal": {
              "thinkingLevel": "minimal",
            },
            "low": {
              "thinkingLevel": "low",
            },
            "medium": {
              "thinkingLevel": "medium",
            },
            "high": {
              "thinkingLevel": "high",
            },
          },
        },
        "antigravity-claude-sonnet-4-6-thinking": {
          "name": "Claude Sonnet 4.6 Thinking",
          "limit": {
            "context": 200000,
            "output": 64000,
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"],
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinking": 8192,
              },
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 32768,
              },
            },
          },
        },
        "antigravity-claude-sonnet-4-6": {
          "name": "Claude Sonnet 4.6 (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000,
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"],
          },
        },
        "antigravity-claude-opus-4-6-thinking": {
          "name": "Claude Opus 4.6 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000,
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"],
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinkingBudget": 8192,
              },
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 32768,
              },
            },
          },
        },
      },
    },
    "wolf-ai": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Wolf AI",
      "options": {
        "baseURL": "http://api.ai.rootcloud.info/v1",
        "litellmProxy": true,
      },
      "models": {
        "glm-4.7": {
          "name": "GLM 4.7",
          "id": "svc/glm-4.7",
          "attachment": false,
          "reasoning": true,
          "interleaved": {
            "field": "reasoning_content",
          },
          "limit": {
            "context": 202752,
            "output": 65535,
          },
          "modalities": {
            "input": ["text", "image"],
            "output": ["text"],
          },
        },
        "k2p5": {
          "name": "Kimi K2.5",
          "id": "svc/kimi-k2.5-coder",
          "reasoning": true,
          "attachment": true,
          "limit": {
            "context": 262144,
            "output": 32768,
          },
          "modalities": {
            "input": ["text", "image", "video"],
            "output": ["text"],
          },
          "interleaved": {
            "field": "reasoning_content",
          },
        },
        "ack-dev": {
          "name": "Ack Dev",
          "id": "svc/kimi-k2",
          "reasoning": true,
          "attachment": false,
          "interleaved": {
            "field": "reasoning_content",
          },
          "limit": {
            "context": 252144,
            "output": 65535,
          },
          "modalities": {
            "input": ["text", "image", "video"],
            "output": ["text"],
          },
        },
      },
    },
    "kimi-code": {
      "name": "Kimi For Coding",
      // "npm": "@ai-sdk/openai-compatible",
      "npm": "@ai-sdk/anthropic",
      "options": {
        "baseURL": "http://localhost:4000/v1",
        // "baseURL": "https://api.kimi.com/coding/v1",
        "litellmProxy": true,
      },
      "models": {
        "k2p5": {
          "name": "Kimi K2.5",
          "reasoning": true,
          "attachment": false,
          "limit": {
            "context": 262144,
            "output": 32768,
          },
          "modalities": {
            "input": ["text", "image", "video"],
            "output": ["text"],
          },
          "interleaved": true,
        },
      },
    },
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true, // 启用 macOS 风格加速滚动时，scroll_speed 无效
    },
    "scroll_speed": 5, // 滚动速度
  },
  "lsp": {
    "marksman-lsp": {
      "command": ["marksman", "server"],
      "extensions": [".md", ".mdc"],
    },
  },
}
